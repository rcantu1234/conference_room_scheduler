<p id="notice"><%= notice %></p>

<h1>Listing Meetings</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= User.find_by(id: meeting.user_id).email %></td>
        <td><%= Room.find_by(id: meeting.room_id).name %></td>
        <td><%= link_to 'Show', room_meeting_path(params[:room_id], meeting) %></td>
        <td><%= link_to 'Edit', edit_room_meeting_path(@room, meeting) %></td>
        <td><%= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

