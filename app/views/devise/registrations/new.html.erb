<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs width-height">
    <%= f.input :first_name %><br>
    <%= f.input :last_name %><br>
    <%= f.input :date_of_birth %><br>
    <%= f.input :favorite_color %><br>
    <%= f.input :phone_number %><br>
    <%= f.input :email, required: true, autofocus: true %><br>
    <%= f.input :password, required: true, label:
    ("Password (#{@minimum_password_length} characters minimum)" if @validatable) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <br>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
