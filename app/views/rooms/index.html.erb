<h1>Listing Rooms</h1>

<%= link_to 'New Room', new_room_path %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag room.photo.url(:medium) %></td>
        <td><%= room.name %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<nav>
  <ul class='pagination'>
    <li class="<%= 'disabled' if @current_page <= 0 %>">
      <%= link_to('Previous', (rooms_path(page: @current_page - 1) if @current_page > 0), :'aria-label' => 'Previous') %>
    </li>

    <% ((@current_page - 2)..(@current_page + 2)).each do |page_num| %>
      <% if page_num == @current_page %>
        <li class='active'>
          <% elsif page_num < 0 %>
        <li class="disabled">
         <% else %>
        <li>
        <% end %>

          <% if page_num < 0 %>
           <%= link_to('*', '#') %>
          <% else %>
           <%= link_to(page_num, rooms_path(page: page_num)) %>
          <% end %>
        </li>
    <% end %>

    <li class="<%= 'disabled' if @rooms.length > 0 %>">
     <%= link_to('Next >', (rooms_path(page: @current_page + 1) if @rooms.length > 0), :'aria-label' => 'Next')  %>
    </li>

  </ul>
</nav>

<br>


