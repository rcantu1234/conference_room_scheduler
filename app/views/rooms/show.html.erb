<%= link_to 'Create Meeting', new_room_meeting_path(@room) %> |
<%= link_to 'Back', rooms_path %>

<p class="image-format"><%= image_tag @room.photo.url(:large) %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @room.location %>
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<br>

<h1>Listing Meetings</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Updated At</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time.to_formatted_s(:long) %></td>
        <td><%= meeting.end_time.to_formatted_s(:long) %></td>
        <td><%= meeting.updated_at.to_formatted_s(:long) %></td>
        <td><%= meeting.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
